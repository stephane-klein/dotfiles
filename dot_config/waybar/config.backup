{
    "layer": "bottom",
    "height": 10,
    "modules-left": [
        "sway/workspaces",
        "sway/mode"
    ],
    "modules-center": [
        "cpu",
        "battery",
        "backlight",
        "pulseaudio",
        "custom/lang"
    ],
    "modules-right": [
        "clock"
    ],

    "sway/workspaces": {
        "persistent_workspaces": {
            "1": [],
            "2": [],
            "3": [],
            "4": [],
            "5": [],
            "6": [],
            "7": [],
            "8": [],
            "9": []
        },
        "all-outputs": true
    },
    "sway/window":{
        "max-length":50
    },
    "idle_inhibitor": {
        "format": "idle | ",
        "format-icons": {
            "activated": "",
            "deactivated": ""
        }
    },
    "tray": {
        "icon-size": 8,
        "spacing": 20
    },
   "custom/clock-icon": {
        "format": "<span font_family='Font Awesome 6' size='x-large'></span>",
        "interval": "once",
    },
    "clock": {
        "timezone": "Europe/Budapest",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": " {:%Y-%m-%d} ",
        "format": " {:%Y-%m-%d | %H:%M} "
    },
   "custom/cpu-icon": {
        "format": "<span font_family='Font Awesome 6' size='x-large'></span>",
        "interval": "once",
    },
    "cpu": {
        "format": " cpu:{usage:02}% ",
        "tooltip": false
    },
   "custom/mem-icon": {
        "format": "<span font_family='Font Awesome 6' size='x-large'></span>",
        "interval": "once",
    },
    "memory": {
        "interval": 20,
    "format": " mem:{avail:0.1f}G "
    },
   "custom/disc-icon": {
        "format": "<span font_family='Font Awesome 6' size='xx-large'></span>",
        "interval": "once",
    },
    "disk":{
    "interval": 60,
    "format":" ssd:{free} "
    },
   "custom/light-icon": {
        "format": "<span font_family='Font Awesome 6' size='medium'></span>",
        "interval": "once",
    },
    "backlight": {
        "format": " lcd:{percent}% ",
        "format-icons": ["", ""],
        "on-scroll-up" : "brightnessctl s 5%+",
        "on-scroll-down" : "brightnessctl s 5%-"
    },
   "custom/batt-icon": {
        "format": "<span font_family='Font Awesome 6' size='xx-large'></span>",
        "interval": "once",
    },
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": " bat:{capacity}% ",
        "format-charging": " bat:{capacity}% ",
        "format-plugged": " bat:{capacity}% ",
        "format-alt": " bat:{time} ",
        "format-icons": ["", "", "", "", ""]
    },
    "battery#bat2": {
        "bat": "BAT2"
    },
   "custom/net-icon": {
        "format": "  <span font_family='Font Awesome 6' size='xx-large'></span> ",
        "interval": "once",
        "on-click": "iwgtk"
    },
    "network": {
        "format-wifi": " WiFi ",
        "format-ethernet": " Eth ",
        "format-linked": " {ifname} (No IP) ",
        "format-disconnected": " Dead ",
        "on-click": "iwgtk"
    },
   "custom/vol-icon": {
        "format": "<span font_family='Font Awesome 6' size='xx-large'></span> ",
        "interval": "once",
        "on-click": "pavucontrol"
    },
   "custom/energy-icon": {
        "format": " <span font_family='Font Awesome 6' size='small'></span> ",
        "interval": "once",
        "on-click": "tlpui"
    },
   "custom/hardware-icon": {
        "format": "<span font_family='Font Awesome 6' size='xx-large'></span> ",
        "interval": "once",
        "on-click": "GDK_BACKEND=x11 hardinfo"
    },
    "pulseaudio": {
        "format": " vol:{volume}% ",
        "format-bluetooth": " vol:{volume}% ",
        "format-bluetooth-muted": " {icon}  ",
        "format-muted": " {format_source}  ",
        "format-source": "{volume}%   ",
        "format-source-muted": "  ",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        },
        "on-click": "pavucontrol"
    },
   "custom/lang-icon": {
        "format": "<span font_family='Font Awesome 6' size='xx-large'></span> |",
        "interval": "once",
    },
    "custom/lang": {
        "format": " kbd:{} ",
    "exec" : "swaymsg -t get_inputs | jq -r '.[] | select(.identifier == \"1165:49408:ITE_Tech._Inc._ITE_Device(8910)_Keyboard\") | .xkb_active_layout_name' | tail -1 | cut -c1,2",
    "interval": 60
    },
    "tray": {
        "icon-size": 14,
        "spacing": 10
    }
}
